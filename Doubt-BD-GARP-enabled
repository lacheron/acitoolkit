    def set_epMoveDetectMode (self, epMoveDetectMode_value):
        """
        Set epmove detection garp
        :param epMoveDetectMode_value:
        """
        valid_epMoveDetectMode  = ('garp')
        if epMoveDetectMode_value not in valid_epMoveDetectMode :
            raise ValueError('Elige si o no' % valid_epMoveDetectMode)
        self.epMoveDetectMode = epMoveDetectMode_value
        

